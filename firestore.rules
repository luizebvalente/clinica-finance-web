rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para usuários - só podem acessar seus próprios dados
    match /usuarios/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regras para clínicas - owner pode acessar, colaboradores com permissão
    match /clinicas/{clinicaId} {
      allow read, write: if request.auth != null && (
        // Owner da clínica
        resource.data.ownerId == request.auth.uid ||
        request.resource.data.ownerId == request.auth.uid ||
        // Usuário tem acesso na subcoleção de usuários
        exists(/databases/$(database)/documents/clinicas/$(clinicaId)/usuarios/$(request.auth.uid))
      );
      
      // Subcoleções da clínica
      match /{subcollection}/{docId} {
        allow read, write: if request.auth != null && (
          // Owner da clínica
          get(/databases/$(database)/documents/clinicas/$(clinicaId)).data.ownerId == request.auth.uid ||
          // Usuário tem acesso
          exists(/databases/$(database)/documents/clinicas/$(clinicaId)/usuarios/$(request.auth.uid))
        );
      }
    }
    
    // Regras para receitas antigas (manter compatibilidade)
    match /receitas/{receitaId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.userId || 
         request.auth.uid == request.resource.data.userId);
    }
    
    // Regras para despesas antigas (manter compatibilidade)
    match /despesas/{despesaId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.userId || 
         request.auth.uid == request.resource.data.userId);
    }
    
    // Regras para movimentações de fluxo de caixa
    match /movimentacoes/{movimentacaoId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.userId || 
         request.auth.uid == request.resource.data.userId);
    }
    
    // Regras para configurações da clínica antigas
    match /configuracoes/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regras para relatórios
    match /relatorios/{relatorioId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.userId || 
         request.auth.uid == request.resource.data.userId);
    }
  }
}
